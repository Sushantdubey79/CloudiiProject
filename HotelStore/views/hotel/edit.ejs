<%- include("../partials/header") %>

<div class="container" style="text-align: center;">

	<h1>Edit <%= Hotel.name %></h1>
	<div class="row">
	
		<div style="width:30%;margin:0 auto;"> 
		
		<form action="/hotels/<%= Hotel.id %>?_method=PUT" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" name="hotel[name]" value="<%= Hotel.name %>" required>
		</div>
		<div class="form-group">
			<input class="form-control"  name="" value="<%= %>" required>
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="hotel[description]" value="<%= Hotel.description %>">
		</div>
		<div class="form-group">
			<input class="btn  btn-outline-secondary btn-block" type="submit">
		</div>
		</form>
		<a href="/hotels">Go Back</a>
	</div>

	</div>

</div>
