<%- include("partials/header") %>
<link rel="stylesheet" href="/booking.css">
<div class="container" style="text-align: center;">

	<h1>Create a new Hotel</h1>
	<div class="row">
	
		<div style="width:30%;margin:0 auto;"> 
		
		

		<form action="/hotels" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" name="name" placeholder="name" required>
		</div>
		<div class="form-group">
			<input class="form-control" type="number" name="price" placeholder="price" min="500" step="100" required>
		</div>
		<div class="form-group">
			<input class="form-control" name="image1" placeholder="imageurl" >
		</div>
		<div class="form-group">
			<input class="form-control" name="image2" placeholder="imageurl" >
		</div>
		<div class="form-group">
			<input class="form-control" name="image3" placeholder="imageurl" >
		</div>
		<div class="form-group">
			<input class="form-control" name="image4" placeholder="imageurl" >
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="description" placeholder="description" >
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="address" placeholder="address" >
		</div>
		<div class="form-group">
			<input class="btn  btn-outline-secondary btn-block" type="submit">
		</div>
		</form>
		<a href="/hotels">Go Back</a>
	</div>

	</div>

</div>


<%- include("partials/footer") %>
